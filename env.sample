# Server Configuration
LOG_LEVEL=debug
SERVER_PORT=:8080
READ_TIMEOUT=15s
WRITE_TIMEOUT=15s
IDLE_TIMEOUT=60s

# PostgreSQL Configuration

# Option 1: Use full URL (takes precedence if set)
# Format: postgres://user:password@host:port/dbname?sslmode=disable
POSTGRES_URL=postgres://postgres:postgres@localhost:5432/swift_school?sslmode=disable

# Option 2: Use individual fields (used if POSTGRES_URL is empty)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB_NAME=swift_school
POSTGRES_MAX_OPEN_CONNS=25
POSTGRES_MAX_IDLE_CONNS=5
POSTGRES_CONN_MAX_LIFETIME=5m
POSTGRES_QUERY_TIMEOUT=10s

# MongoDB Configuration
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USER=
MONGO_PASSWORD=
MONGO_DB=swift_school
MONGO_MAX_POOL_SIZE=100
MONGO_MIN_POOL_SIZE=10
MONGO_CONN_IDLE_TIME=5m

# Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=24h

# Environment
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
